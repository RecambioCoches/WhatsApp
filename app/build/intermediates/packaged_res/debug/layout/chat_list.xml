<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageViewChat"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingLeft="40px"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textViewNombreChat"
                android:layout_width="200sp"
                android:layout_height="25sp"

                android:text="TextView" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textViewMensajeChat"
                android:layout_width="200sp"
                android:layout_height="25sp"

                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHoraChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00bb2d"
                android:text="TextView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewCantidad"
                android:layout_width="30dp"
                android:layout_height="36dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#00bb2d"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/textViewCantidadMensajes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>